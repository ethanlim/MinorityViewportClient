<Window x:Class="MultipleKinectsPlatform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <Grid x:Name="mainViewerGrid" HorizontalAlignment="Left" Height="575" VerticalAlignment="Top" Width="676" Margin="10,44,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Name="imgMain" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
            <TextBlock Name="tbStatus" Margin="267,243,-404,-243" />
        </Grid>
        <DockPanel HorizontalAlignment="Left" Height="17" LastChildFill="False" VerticalAlignment="Top" Width="517"/>
        <Grid x:Name="sideMenuGrid" HorizontalAlignment="Left" Height="638" Margin="691,22,0,0" VerticalAlignment="Top" Width="291">
            <ListView HorizontalAlignment="Left" Height="91" Margin="10,48,0,0" VerticalAlignment="Top" Width="254">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="80" Header="No." DisplayMemberBinding="{Binding sensorId}"/>
                        <GridViewColumn Width="80" Header="Status" DisplayMemberBinding="{Binding sensorStatus}"/>
                        <GridViewColumn Width="100" Header="Stream" DisplayMemberBinding="{Binding sensorStream}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label Content="Sensors" HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Width="178" Margin="10,10,0,0"/>
        </Grid>
    </Grid>
</Window>
